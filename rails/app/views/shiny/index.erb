<library>
  <action id="reorder_workspace" target="workspace" type="update" href="ajax/workspace/panel" scope="stack" />
</library>

<page title="Shiny" action="post/env">
  <xhtml>
    <%= token_tag %>
  </xhtml>
  <sidebar>
    <%= render :partial => 'partials/sidebar' %>
  </sidebar>
  <body>
    <panels id="workspace" title="Current Workspace - Unsaved" onreorder="reorder_workspace" accept="all_collections my_collections" size="large" scroll="true">
      <status>
        <%= render :partial => 'partials/status' %>
      </status>
      <% @render[:panel].each { |p| %>
        <%= render :partial => "partials/#{File.basename(p)}" %>
      <% } %>
    </panels>
  </body>
</page>
