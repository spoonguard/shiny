<library>
  <action id="reorder_exons" target="exons" type="update" href="ajax/exons/tuple" scope="self" />
  <select id="gene_ref">
    <option value="0">Gene Name</option>
  </select>
  <select id="exons_transition">
    <option value="0">
      nothing at all
    </option>
  </select>
</library>
<panel id="exons_panel" title="Exons" open="false">
  <collection id="exons" onreorder="reorder_exons" select="single" extent="2">
    <schema id="h1">
      <elt type="string">Exon Name</elt>
      <elt type="string">Gene</elt>
      <elt type="timestamp">Created</elt>
      <elt type="string">Owner</elt>
    </schema>
    <tuple>
      <elt>Example Exon</elt>
      <elt>Gene Name</elt>
      <elt>Yesterday</elt>
      <elt>browndav</elt>
    </tuple>
    <tuple>
      <elt>Another Example Exon</elt>
      <elt>Gene Name</elt>
      <elt>Yesterday</elt>
      <elt>browndav</elt>
    </tuple>
    <tuple>
      <elt>Yet a Third Example Exon</elt>
      <elt>Gene Name</elt>
      <elt>Two Days Ago</elt>
      <elt>browndav</elt>
    </tuple>
  </collection>
  <panels id="exons_detail" size="small">
    <panel title="Selection Details" open="true">
      <collection id="exons_detail_collection" type="form" appearance="normal">
        <tuple>
          <elt>
            <import id="exons[exon_nm]" ref="test_input" label="Exon Name" value="" />
          </elt>
          <elt>
            <import id="exons[gene_id]" ref="gene_ref" label="Gene" value="" />
          </elt>
        </tuple>
      </collection>
    </panel>
  </panels>
  <transition>
    <import ref="before_transition" />
    <import ref="exons_transition" key="transition" selected="0" />
    <import ref="after_transition" />
  </transition>
</panel>

